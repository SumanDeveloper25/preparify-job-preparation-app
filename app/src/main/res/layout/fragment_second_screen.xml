<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.OnBoarding.SecondScreen">

    <LinearLayout
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="center"
        android:layout_margin="28dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_flex"
            android:text="skip"
            android:textColor="@color/main_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/next" />

    </LinearLayout>

    <ImageView
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:layout_marginTop="200dp"
        android:layout_gravity="center"
        android:src="@drawable/path"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/text_black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_flex"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Get a proper Roadmap\nwith proper Guidance"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/profesional_s_choice"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ellipse_next_false" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/ellipse_next_true" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ellipse_next_false" />

    </LinearLayout>


    <Button
        android:id="@+id/btnNext2"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button"
        android:text="Next"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"/>


</LinearLayout>


