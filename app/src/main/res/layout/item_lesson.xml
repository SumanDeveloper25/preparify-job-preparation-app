<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="2dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Lesson Number TextView -->
        <TextView
            android:id="@+id/tvLessonNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
        android:textSize="30sp"
        android:textColor="@color/text_light_black"
        android:paddingHorizontal="10dp"
        android:fontFamily="@font/roboto_flex"
        android:textStyle="bold"/>

        <!-- Vertical layout for title and description -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLessonTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_flex"
                android:textColor="@color/main_color" />

            <TextView
                android:id="@+id/tvLessonDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson Description"
                android:fontFamily="@font/roboto_flex"
                android:textSize="14sp"
                android:textColor="@color/text_light_black" />
        </LinearLayout>

        <!-- Next Icon ImageView -->
        <ImageView
            android:id="@+id/ivNextIcon"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:src="@drawable/next_button"
            app:tint="@color/text_light_black" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
